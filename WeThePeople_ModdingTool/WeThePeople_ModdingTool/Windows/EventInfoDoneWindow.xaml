<Window x:Class="WeThePeople_ModdingTool.Windows.EventInfoDoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeThePeople_ModdingTool.Windows"
        mc:Ignorable="d"
        Title="EventInfoDoneWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label>Gold:</Label>
        <TextBox x:Name="textBox_Gold" Grid.Column="2" PreviewTextInput="PreviewTextInput"></TextBox>
        <Label Grid.Row="1">Unit class:</Label>
        <ComboBox x:Name="comboBox_UnitClass"  Grid.Column="2" Grid.Row="1"></ComboBox>
        <Label Grid.Row="2">Unit count:</Label>
        <ComboBox x:Name="comboBox_UnitCount" Grid.Column="2" Grid.Row="2"></ComboBox>
        <Label Grid.Row="3">Unit experience:</Label>
        <TextBox x:Name="textBox_UnitExperiance" Grid.Column="2" Grid.Row="3" PreviewTextInput="PreviewTextInput"></TextBox>
        <Label Grid.Row="4">Relation King:</Label>
        <ComboBox x:Name="comboBox_RelationKing" Grid.Column="2" Grid.Row="4"></ComboBox>
        <Label Grid.Row="5">Yield price:</Label>
        <ComboBox x:Name="comboBox_YieldPrice" Grid.Column="2" Grid.Row="5"></ComboBox>
        <Button x:Name="button_Cancel" Click="button_Cancel_Click" Grid.Row="6" Grid.Column="2" Content="Cancel" HorizontalAlignment="Right" Width="120" Height="40" Margin="4,4,4,4"/>
        <Button x:Name="button_Ok" Click="button_Ok_Click" Grid.Row="6" Grid.Column="2" Content="OK" HorizontalAlignment="Left" Width="120" Height="40" Margin="4,4,4,4"/>
    </Grid>
</Window>
